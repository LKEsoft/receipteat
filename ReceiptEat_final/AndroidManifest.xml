<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.receipteat_final"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/receipteat_name"
		android:largeHeap="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.receipteat.MainActivity"
            android:label="@string/receipteat_name"
             android:hardwareAccelerated="false"
            android:screenOrientation="portrait"
             >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.receipteat.savepage"
            android:hardwareAccelerated="false"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|keyboard">
        </activity>
        <activity
            android:name="com.receipteat.viewpage"
             android:hardwareAccelerated="false"
            android:screenOrientation="portrait"
             >
        </activity>
        <activity
            android:name="com.receipteat.saveoption"
             android:hardwareAccelerated="false"
            android:screenOrientation="portrait"
             >
        </activity>
    </application>
    
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
</manifest>
